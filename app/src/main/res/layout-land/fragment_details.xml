<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.mohamedfawzy.smartbasket.DetailsFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_name"
        android:layout_marginTop="30dp"
        android:textColor="@color/darkblue"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Level : "
        android:id="@+id/tv_level"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/darkblue"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Score : "
        android:id="@+id/tv_score"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="30dp"
        android:textColor="@color/darkblue"
        android:textSize="22dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Select a subject to get a question"
            android:id="@+id/tv_stmt"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="120dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:prompt="@string/spinner_title"
            android:layout_alignParentRight="true"
            android:layout_marginTop="120dp"
            android:layout_alignRight="@+id/tv_stmt"
            android:spinnerMode="dialog"
            android:textColor="@color/white"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Get a Question Now   "
            android:id="@+id/b_getQ"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/spinner"
            android:background="@drawable/button_rounded_transparent"
            android:textColor="@color/white"/>


    </RelativeLayout>
</FrameLayout>
