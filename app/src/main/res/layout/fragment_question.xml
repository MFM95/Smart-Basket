<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohamedfawzy.smartbasket.QuestionFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tv_name"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Level : "
            android:id="@+id/tv_level"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Your Score : "
            android:id="@+id/tv_score"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="22dp" />
        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/tv_score"
            android:layout_centerHorizontal="true"
            android:background="@drawable/progress"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Question "
            android:id="@+id/tv_Q"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_score"
            android:layout_marginTop="85dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_Q"
            android:layout_marginTop="20dp"
            android:id="@+id/linear1"
            android:gravity="center"
            android:weightSum="5"
            >

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choice A"
            android:id="@+id/b_choiceA"
            android:background="@drawable/button_square_transparent"
            android:layout_weight="3"
            android:textColor="@color/darkblue"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/linear1"
            android:layout_marginTop="20dp"
            android:id="@+id/linear2"
            android:gravity="center"
            android:weightSum="5"

            >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choice B"
                android:id="@+id/b_choiceB"
                android:background="@drawable/button_square_transparent"
                android:layout_weight="3"
                android:textColor="@color/darkblue"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/linear2"
            android:layout_marginTop="20dp"
            android:id="@+id/linear3"
            android:gravity="center"
            android:weightSum="5"
            >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choice C"
                android:id="@+id/b_choiceC"
                android:background="@drawable/button_square_transparent"
                android:layout_weight="3"
                android:textColor="@color/darkblue"/>
        </LinearLayout>




    </RelativeLayout>
</FrameLayout>
